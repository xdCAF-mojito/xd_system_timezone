// A library for use on device or host to lookup time zones for a location.
java_library {
    name: "geotz_lookup",
    srcs: ["src/main/java/**/*.java"],
    static_libs: [
        "geotz_s2storage_ro",
        "s2-geometry-library-java",
    ],
    host_supported: true,
    jarjar_rules: "jarjar-rules.txt",
}

// An Android library version of geotz_lookup. Includes proguard rules to remove unnecessary code.
android_library {
    name: "geotz_lookup-device",
    manifest: "src/main/AndroidManifest.xml",
    static_libs: [
        "geotz_lookup",
    ],
}

// Device side tests for the geotz_lookup code.
android_test {
    name: "GeotzLookupTests",
    srcs: ["src/test/java/**/*.java"],
    manifest: "src/test/AndroidManifest.xml",
    sdk_version: "current",
    static_libs: [
        "androidx.test.runner",
        "geotz_lookup-device",
        "junit",
    ],
    test_suites: ["general-tests"],
}
